<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Goto increase App'
            on_press: root.manager.current = 'increase'
        Button:
            text: 'Goto move App'
            on_press: root.manager.current = 'move'
        Button:
            text: 'Goto trace App'
            on_press: root.manager.current = 'trace'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Goto settings'
                on_press: root.manager.current = 'settings'
            Button:
                text: 'Exit'
                on_press: exit()

<Setting>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.width, self.height
            pos: (0, self.height * 0)

    BoxLayout:
    	orientation: 'vertical'
        BoxLayout: 
            orientation: 'horizontal'
            Label:
                text: 'size'
            Slider:
                id: size_slider
                min: 1
                max: 20
                step: 1
                value: root.para.size

        BoxLayout: 
            orientation: 'horizontal'
            Label:
                text: 'quantity'
            Slider:
                id: qua_slider
                min: 1
                max: 100
                step: 1
                value: root.para.qua

        BoxLayout: 
            orientation: 'horizontal'
            Label:
                text: 'speed'
            Slider:
                id: speed_slider
                min: 0
                max: 8
                step: 0.01
                value: root.para.speed_temp

        BoxLayout: 
            orientation: 'horizontal'
            Label:
                text: 'times'
            Slider:
                id: times_slider
                min: 1
                max: 10
                step: 1
                value: root.para.times

        BoxLayout: 
            orientation: 'horizontal'
            Label:
                text: 'lag'
            Slider:
                id: lag_slider
                min: 0
                max: 99
                step: 1
                value: root.para.lag

        Button:
            text: 'Back to menu'
            on_press: root.btn()

<DrowLayout>
    id: my_widget
    FloatLayout:
        size: root.width, root.height

<BaseLayout>
    FloatLayout:
        size: root.width, root.height
        Button:
            size_hint: 1, 0.05 
            pos_hint: {'x': 0,'y': 0}
            text: 'Back to menu'
            on_press: root.btn()

<DrowImg>
    FloatLayout:
        Image:
            source: root.img_name
            size_hint: (0.3 * root.size, 0.3 * root.size)
            pos_hint: {'center_x': root.x_img_pos, 'center_y': root.y_img_pos}